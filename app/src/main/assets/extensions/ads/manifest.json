{
  "manifest_version": 2,
  "name": "Mozilla Android Components - Ads",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "include_globs": [
        "https://www.google.*/search*",
        "https://www.baidu.com/s*",
        "https://www.baidu.com/baidu*",
        "https://*search.yahoo.com/search*",
        "https://www.bing.com/search*",
        "https://duckduckgo.com/*"
      ],
      "js": ["ads.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "geckoViewAddons",
    "nativeMessaging"
  ]
}
